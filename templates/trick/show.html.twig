{% extends 'base.html.twig' %}

{% block title 'Show Trick' %}

{% block body %}
    <h1>Trick</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ trick.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ trick.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ trick.description }}</td>
            </tr>
            <tr>
                <th>Level</th>
                <td>{{ trick.level }}</td>
            </tr>
            <tr>
                <th>MainPicture</th>
                <td>{{ trick.mainPicture }}</td>
            </tr>
            <tr>
                <th>createDate</th>
                <td>{{ trick.createDate ? trick.createDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>lastUpdate</th>
                <td>{{ trick.lastUpdate ? trick.lastUpdate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_trick_index') }}">back to list</a>

    <a href="{{ path('app_trick_edit', {'id': trick.id}) }}">edit</a>

    {{ include('trick/_delete_form.html.twig') }}

    <div>
        {% if comments|length > 0 %}
            {% for comment in comments %}
                <div>
                    <h4> [AUTHOR] a Ã©crit a {{ comment.createDate|date() }}</h4>
                    <p> {{ comment.content|raw }} </p>
                </div>
            {% endfor %}
        {% endif %}
    </div>
{% endblock %}
