{% extends 'base.html.twig' %}

{% block title 'SnowTricks index' %}

{% block body %}
    <!-- Page Header-->
    <header class="masthead" style="background-image: url('assets/img/home2-bg.jpg');
                                     height: 722px; ">
        <div class="container position-relative px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <div class="site-heading mt-5">
                        <h1>SnowTricks</h1>
                        <span class="subheading"><strong>La référence des figures de Snow</strong></span>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div class="container">
        {% if tricks|length > 0 %}
            <h1 id="tricks" class="mb-4 text-center text-muted"> Toutes les {{ all_tricks|length }} figures </h1>
            {% for row in tricks|batch(4) %}
                <div class="row mb-5 justify-content-between">
                    {% for trick in row %}
                        <div class="col-md-3">
                            <article class="pin bg-white rounded shadow" >
                                <div class="mw-100 rounded-top overflow-hidden">
                                    <a href="{{ path('app_trick_show', {'id':trick.id,'page':1}) }}">
                                        <img src="{{ (trick.mainPicture ? 1 : asset('assets/img/trick.jpg')) }}" alt="{{ trick.name }}" class="w-100">
                                    </a>
                                </div>
                                <h2 class="h5 pl-5 pt-3" style="padding-left:25px;"> <a href="{{ path('app_trick_show', {'id':trick.id,'page':1}) }}" class="text-secondary text-muted text-decoration-none"> {{ trick.name }} </a> </h2>
                                <p class="pl-5 pb-3 text-muted" style="padding-left:25px;">
                                    <small>Submitted by [AUTHOR]</small>
                                    <small>Groupe : {{ trick.category.name }}</small>
                                    <small>Difficulté : {{ trick.level }}</small>
                                    <a href="{{ path('app_trick_show', {'id':trick.id,'page':1}) }}">show</a>
                                    <a href="{{ path('app_trick_edit', {'id': trick.id}) }}">edit</a>
                                </p>
                            </article>
                        </div>
                    {% endfor %}
                </div>
                <!-- Divider-->
                <hr class="my-4" />
            {% endfor %}
                <!-- Pager-->
            {% if isIndex %}
                <div class="d-flex justify-content-center mb-4"><a class="btn btn-primary text-uppercase" href="{{ path('app_all_tricks') }}">Voir tous les tricks ↓</a>
                </div>
            {% else %}
                <div class="d-flex justify-content-center mb-4"><a class="btn btn-primary text-uppercase" href="{{ path('app_trick_index') }}">Voir moins ↑</a>
                </div>
            {% endif %}
        {% else %}
            <p class="h2 mt-5 text-center"> No Trick yet <a href="{{ path('app_trick_create') }}"> Be the First to create a Trick !</a> </p>
        {% endif %}
    </div>
{% endblock %}

