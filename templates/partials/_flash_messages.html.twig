{#
    Notre message tente de styliser des messages flash que nous n'avons pas d√©fini :
    On va donc rajouter pour quel type de message d'erreur flash on veut ce message en
    rajoutant : (['success', 'error', 'info'])
#}

{% for label, messages in app.flashes(['success', 'error', 'info']) %}
    {% for message in messages %}
        <div class="alert alert-{{ label }}" role="alert">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}
