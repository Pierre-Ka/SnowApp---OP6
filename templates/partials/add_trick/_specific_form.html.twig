{{ form_start(form) }}
    <div class="my-custom-class-for-errors">
        {{ form_errors(form) }}
    </div>
    {{ form_widget(form._token) }}
    {{ form_row(form.name) }}
    {{ form_row(form.category) }}
    {{ form_row(form.level) }}
    {{ form_row(form.description) }}
    {{ form_row(form.setMainPicture) }}


    <fieldset class="mt-4">
        <legend class="legend-addtrick text-center w-auto px-3">{{ form_label(form.videos) }}</legend>
        {{ form_errors(form.videos) }}
        <div class="mx-5 mb-5 mt-3">
            <button  type="button" class="mb-3 bg-transparent" id="new_video">
                <span class="fa fa-plus-circle mx-2" ></span>
                    Ajouter une nouvelle video
            </button>
            <table class="row px-4 mt-4" id="space_where_prototype_videos_is_added"
                   data-prototype=
                   "{{ include('partials/add_trick/_collection_form.html.twig', {form: form.videos.vars.prototype})|e('html_attr') }}"
                   data-index="{{ form.pictures|length }}">
                {% for videoField in form.videos %}
                    {{ include('partials/add_trick/_collection_form.html.twig', {form: form.pictures}) }}
                {% endfor %}
            </table>
        </div>
    </fieldset>
    <fieldset class="mt-4">
        <legend class="legend-addtrick text-center w-auto px-3">{{ form_label(form.pictures) }}</legend>
        {{ form_errors(form.pictures) }}
        <div class="mx-5 mb-5 mt-3">
            <button type="button" class="mb-5 bg-transparent" id="new_picture" >
                <span class="fa fa-plus-circle mx-2"></span>
                    Ajouter une nouvelle image
            </button>
            <table class="row px-4 mt-4" id="space_where_prototype_pictures_is_added"
                   data-prototype=
                   "{{ include('partials/add_trick/_collection_form.html.twig', {form: form.pictures.vars.prototype})|e('html_attr') }}"
                   data-index="{{ form.pictures|length }}">
                {% for pictureField in form.pictures %}
                    {{ include('partials/add_trick/_collection_form.html.twig', {form: form.pictures}) }}
                {% endfor %}
            </table>
        </div>
    </fieldset>
<button class="btn btn-primary w-100 mt-4"  formnovalidate>{{ button_label|default('Sauvegarder') }}</button>
{{ form_end(form, {render_rest:false}) }}
